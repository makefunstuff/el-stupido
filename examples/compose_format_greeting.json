{
  "app": "format-greeting",
  "capabilities": ["io_write"],
  "nodes": [
    {"id": "name", "use": "arg_str", "params": {"index": 1}},
    {"id": "upper_name", "use": "upper_str", "bind": {"text": "name"}},
    {"id": "time", "use": "env_str", "params": {"name": "GREETING_TIME"}},
    {"id": "msg", "use": "format_str", "params": {"template": "Good {1}, {2}!"}, "bind": {"v1": "time", "v2": "upper_name"}},
    {"id": "out", "use": "print_str", "bind": {"value": "msg"}}
  ]
}
