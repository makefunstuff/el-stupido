{
  "domain": "rest",
  "app": { "name": "todo_api", "port": 4000 },
  "models": [
    {
      "name": "todo",
      "fields": [
        { "name": "title", "type": "string", "required": true },
        { "name": "done", "type": "string" }
      ]
    }
  ],
  "routes": [
    { "method": "GET", "path": "/todos", "action": "list", "model": "todo" },
    { "method": "POST", "path": "/todos", "action": "create", "model": "todo" },
    { "method": "GET", "path": "/health", "action": "health" }
  ]
}
