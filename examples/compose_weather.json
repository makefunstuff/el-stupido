{
  "app": "weather",
  "capabilities": ["net_read", "io_write"],
  "nodes": [
    {
      "id": "city",
      "use": "arg_str",
      "params": {"index": 1}
    },
    {
      "id": "base_url",
      "use": "const_str",
      "params": {"value": "https://wttr.in/"}
    },
    {
      "id": "suffix",
      "use": "const_str",
      "params": {"value": "?format=3"}
    },
    {
      "id": "url_part",
      "use": "concat",
      "bind": {"left": "base_url", "right": "city"}
    },
    {
      "id": "full_url",
      "use": "concat",
      "bind": {"left": "url_part", "right": "suffix"}
    },
    {
      "id": "response",
      "use": "http_get_dyn",
      "bind": {"url": "full_url"}
    },
    {
      "id": "trimmed",
      "use": "trim_str",
      "bind": {"text": "response"}
    },
    {
      "id": "out",
      "use": "print_str",
      "bind": {"value": "trimmed"}
    }
  ]
}
