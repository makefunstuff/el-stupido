{
  "app": "stdin-upper",
  "capabilities": ["io_read", "io_write"],
  "nodes": [
    {"id": "input", "use": "read_stdin_all"},
    {"id": "trimmed", "use": "trim_str", "bind": {"text": "input"}},
    {"id": "result", "use": "upper_str", "bind": {"text": "trimmed"}},
    {"id": "out", "use": "print_str", "bind": {"value": "result"}}
  ]
}
