{
  "app": "greet",
  "capabilities": ["io_write"],
  "nodes": [
    {
      "id": "arg1",
      "use": "arg_str",
      "params": { "index": 1 }
    },
    {
      "id": "prefix",
      "use": "const_str",
      "params": { "value": "Hello, " }
    },
    {
      "id": "concat",
      "use": "concat",
      "bind": {
        "left": "prefix",
        "right": "arg1"
      }
    },
    {
      "id": "out",
      "use": "print_str",
      "bind": { "value": "concat" }
    }
  ]
}